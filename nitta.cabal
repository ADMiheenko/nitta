license:             BSD3
license-file:        LICENSE
author:              Aleksandr Penskoi
maintainer:          aleksandr.penskoi@gmail.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     NITTA.Utils
                     , NITTA.FunctionBlocks
                     , NITTA.BusNetwork
                     , NITTA.Timeline
                     , NITTA.Compiler
                     , NITTA.Types
                     , NITTA.TestBench
                     , NITTA.Flows
                     , NITTA.ProcessUnits.Fram
                     , NITTA.ProcessUnits.Accum
  build-depends:       base >= 4.7 && < 5
                     , containers
                     , process
                     , bytestring
                     , data-default
                     , mtl
                     , syb
                     , random
                     , transformers
                     , lens
                     , arrows
                     , array
                     , aeson
                     , text
                     , QuickCheck
                     , QuickCheck-GenT
                     , HStringTemplate
                     , MissingH
  default-language:    Haskell2010

executable nitta-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , bytestring
                     , nitta
                     , hspec
                     , process
                     , data-default
                     , containers
                     , mtl
                     , random
                     , syb
                     , lens
                     , transformers
                     , text
                     , array
                     , aeson
                     , QuickCheck
                     , QuickCheck-GenT
                     , HStringTemplate
                     , MissingH
  default-language:    Haskell2010

test-suite nitta-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       NITTA.ProcessUnits.FramSpec
                     , NITTA.FunctionBlocksSpec
                     , NITTA.ProcessUnitsSpec
  build-depends:       base
                     , nitta
                     , hspec
                     , bytestring
                     , data-default
                     , process
                     , random
                     , text
                     , containers
                     , mtl
                     , syb
                     , lens
                     , transformers
                     , array
                     , aeson
                     , QuickCheck
                     , QuickCheck-GenT
                     , HStringTemplate
                     , MissingH
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

